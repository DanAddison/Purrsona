{# using my favorites filter to output only selected posts #}
<ul class="posts-list">
{%- for post in collections.posts | favorites -%}
  <li class="posts-list__item">
    <time datetime="{{ post.date | dateToISO }}">Posted: {{ post.date | dateToFormat('DD') }}</time>
    <h2 class="posts-list__title">
      <a href="{{ post.url }}">
      {{ post.data.title }}
      </a>
    </h2>
    <p class="posts-list__excerpt">{{ post.data.excerpt }} <a href="{{ post.url }}">Read more...</a></p>
  </li>
{%- endfor -%}
</ul>