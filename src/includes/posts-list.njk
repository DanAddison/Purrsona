<ul class="posts-list">
{%- for post in collections.posts -%}
  <li class="posts-list__item">
    <h2>
      <a href="{{ post.url }}">
      {{ post.data.title }}
      </a>
    </h2>
    <time datetime="{{ post.date | dateToISO }}">{{ post.date | dateToFormat('DD') }}</time>
    <p>{{ post.data.excerpt }}</p>
  </li>
{%- endfor -%}
</ul>